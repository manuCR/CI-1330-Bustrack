<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <a href="/auth/twitter" class="auth_provider">
      <%= image_tag "https://raw.githubusercontent.com/intridea/authbuttons/master/png/twitter_32.png", :size => "32x32", :alt => "Twitter" %></a>
    <a href="/auth/facebook" class="auth_provider">
      <%= image_tag "https://raw.githubusercontent.com/intridea/authbuttons/master/png/facebook_32.png", :size => "32x32", :alt => "Facebook" %></a>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true %></div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in" %></div>
<% end %>

<%= render "devise/shared/links" %>
