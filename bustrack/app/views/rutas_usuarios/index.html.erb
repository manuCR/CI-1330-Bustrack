<h1>Listing Rutas favoritas</h1>

<table>
  <thead>
  <tr>
    <th>Nombre</th>

    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @rutas_usuarios.each do |rutas_usuario| %>
      <% if current_user != nil && rutas_usuario.user != nil %>

          <% if rutas_usuario.user.id == current_user.id %>
              <td><%= rutas_usuario.ruta.nombre %></td>

              <tr>
                <td><%= link_to 'Destroy', rutas_usuario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>
      <% end %>
  <% end %>
  <% #end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rutas usuario', new_rutas_usuario_path %>